# PESUAuth API Configuration Template
# Copy this file to .env and configure as needed

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json
HOST=0.0.0.0
PORT=5000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_AUTHENTICATE=20/minute
RATE_LIMIT_HEALTH=60/minute

# Redis Configuration (optional - falls back to in-memory if disabled)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Monitoring
METRICS_ENABLED=true

# Development Settings (uncomment for development)
# DEBUG=true
# LOG_FORMAT=console
# RATE_LIMIT_ENABLED=false
# REDIS_ENABLED=false

# Test Configuration (for testing only)
# TEST_EMAIL="test@example.com"
